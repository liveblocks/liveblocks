{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".envrc"],
  "pipeline": {
    "build:ast": {
      "dependsOn": ["^build"],
      "outputs": ["src/ast/index.ts", "pegconfig.json"],
      "inputs": ["bin/update-returntypes.js", "src/ast/ast.grammar"]
    },
    "build:parser": {
      "dependsOn": ["build:ast"],
      "outputs": ["src/parser/generated-parser.ts"],
      "inputs": [
        "bin/build-parser",
        "pegconfig.json",
        "src/parser/schema-lang.pegjs"
      ]
    },
    "build": {
      "dependsOn": ["build:ast", "build:parser"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build:ast", "build:parser"],
      "outputs": ["coverage/**"],
      "inputs": [
        "jest.*",
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    },
    "lint": {
      // A package's `lint` script has no dependencies and can be run whenever.
      // It also has no filesystem outputs.
      "outputs": []
    }
    // "format": {
    //   "cache": false,
    //   "outputs": []
    // }
  }
}
