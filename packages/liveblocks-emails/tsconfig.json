{
  // Use the same settings for all packages
  "extends": "../../shared/tsconfig.common.json",

  "compilerOptions": {
    "module": "es2020",
    "lib": ["dom"],
    "skipLibCheck": true,

    // Transform JSX syntax from input *.tsx files into _jsx() calls in the outputted build
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
