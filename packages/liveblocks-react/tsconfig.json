{
  // Use the same settings for all packages
  "extends": "../../tsconfig.common.json",

  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": ["dom", "es2015"],

    "jsx": "react",

    // TODO: Consider making these the defaults for _all_ projects, in tsconfig.common.json
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"]
}
