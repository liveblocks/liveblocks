{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./lib/esm",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "lib": ["es2019", "dom", "esnext"],
    "stripInternal": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./test/**/*.ts"]
}
