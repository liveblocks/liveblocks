{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["dom", "es2015"],
    "stripInternal": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true
  },
  "file": ["src/**/*"]
}
