{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true
  },
  "include": ["src/**/*"]
}
