{
  "name": "@liveblocks/node",
  "version": "0.18.4",
  "description": "A server-side utility that lets you set up a Liveblocks authentication endpoint.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md"
  ],
  "keywords": [
    "node",
    "liveblocks",
    "multiplayer",
    "live-cursors",
    "collaborative"
  ],
  "bugs": {
    "url": "https://github.com/liveblocks/liveblocks/issues"
  },
  "scripts": {
    "dev": "tsup --watch --onSuccess ../../scripts/build.sh",
    "build": "tsup && ../../scripts/build.sh",
    "format": "eslint --fix src/ && prettier --write src/",
    "lint": "eslint src/",
    "test": "jest --silent --verbose",
    "test:watch": "jest --silent --verbose --watch"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@liveblocks/eslint-config": "*",
    "@liveblocks/jest-config": "*",
    "@types/node-fetch": "^2.5.8"
  },
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liveblocks/liveblocks.git",
    "directory": "packages/liveblocks-node"
  }
}
