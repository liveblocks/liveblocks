{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2015",
    "downlevelIteration": true,
    "preserveWatchOutput": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "dist",
    "node_modules",
    "src/transforms/__tests__",
    "src/replacements/__tests__",
    "vitest.config.ts"
  ]
}
